{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "graphql": ["node_modules/graphql"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true 
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["index.d.ts"],
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
